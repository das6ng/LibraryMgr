<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <package name="default" namespace="/" extends="struts-default">
    
        <interceptors>
            <interceptor name="logincheck" class="life.dashyeah.LibraryMgr.Interceptors.LoginChecker"></interceptor>
            <interceptor-stack name="logincheckStack">
                <interceptor-ref name="defaultStack"></interceptor-ref>
                <interceptor-ref name="logincheck"></interceptor-ref>
            </interceptor-stack>
        </interceptors>
        
        <action name="login" method="login" class="life.dashyeah.LibraryMgr.Login">
            <result type="stream">
                <param name="contentType">text/plain</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>
        
        <action name="logout" method="logout" class="life.dashyeah.LibraryMgr.Login">
            <result>/login.html</result>
        </action>
        
        <action name="index" method="index" class="life.dashyeah.LibraryMgr.Redirecter">
            <result name="user">/index.html</result>
            <result name="admin">/index_admin.html</result>
            <result name="error">/login.html</result>
            
            <interceptor-ref name="logincheckStack"></interceptor-ref>
        </action>
        
    </package>
    
</struts>